{
    "name": "nordsoftware/lumen-core",
    "description": "Core module for our REST API based on Lumen framework.",
    "license": "MIT",
    "keywords": ["lumen", "core", "rest", "api", "ddd", "laravel"],
    "authors": [
        {
            "name": "Christoffer Niska",
            "email": "christofferniska@gmail.com"
        },
        {
            "name": "Danijel Maricic",
            "email": "danijelmaricic@gmail.com"
        }
    ],
    "require": {
        "nesbot/carbon": "~1.20",
        "crisu83/shortid": "^1.0"
    },
    "require-dev": {
        "laravel/lumen-framework": "5.2.*"
    },
    "suggest": {
        "nordsoftware/lumen-cors": "For CORS support.",
        "nordsoftware/lumen-doctrine": "For Doctrine support.",
        "nordsoftware/lumen-elasticsearch": "For Elasticsearch support.",
        "nordsoftware/lumen-fractal": "For serialization support.",
        "nordsoftware/lumen-oauth2": "For OAuth2 support.",
        "nordsoftware/lumen-rbac": "For RBAC support.",
        "pagerfanta/pagerfanta": "For pagination support."
    },
    "autoload": {
        "psr-4": {
            "Nord\\Lumen\\Core\\": "src"
        }
    }
}
